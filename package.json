{
  "name": "cable-platform",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r run build",
    "lint": "npx eslint \"apps/**/*.{ts,js}\" \"services/**/*.{ts,js}\" \"shared/**/*.{ts,js}\" --no-error-on-unmatched-pattern",
    "test": "pnpm -r run test || true",
    "start": "docker compose up --build",
    "prepare": "husky install",
    "gen:contracts": "cd packages/contracts && pnpm run generate-json && pnpm run generate-types && pnpm run generate-sdk",
    "sdk:gen": "./scripts/gen-sdk.sh",
    "contracts:verify": "./scripts/verify-contracts.sh",
    "dev:check": "node scripts/health-check.js",
    "dev:toolkit": "node scripts/dev-toolkit.js",
    "dev:workflows": "node scripts/dev-workflows.js",
    "dev:admin-test": "node scripts/test-admin-mcp.js",
    "mcp:start": "cd services/mcp-playwright && pnpm run mcp"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "shared/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.12.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "form-data": "^4.0.4",
    "husky": "^8.0.3",
    "playwright": "^1.56.0",
    "prettier": "^3.3.3",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "zod": "^3.25.3"
  }
}

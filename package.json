{
  "name": "cable-platform",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r run build",
    "lint": "npx eslint \"apps/**/*.{ts,js}\" \"services/**/*.{ts,js}\" \"shared/**/*.{ts,js}\" --no-error-on-unmatched-pattern",
    "test": "pnpm -r run test || true",
    "start": "docker compose up --build",
    "prepare": "husky install",
    "sdk:gen": "./scripts/gen-sdk.sh",
    "contracts:verify": "./scripts/verify-contracts.sh"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "shared/*"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "husky": "^8.0.3"
  }
}

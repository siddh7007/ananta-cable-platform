AUTH0_DOMAIN=YOUR_TENANT.auth0.com
AUTH0_AUDIENCE=https://api.cable-platform.local
DEV_AUTH_BYPASS=true
PORTAL_ORIGIN=http://localhost:5173
VITE_API_BASE_URL=http://localhost:8080

# OpenTelemetry (optional - for tracing and observability)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces


# ---- Databases ----
# Supabase-style Postgres (local)
SUPABASE_POSTGRES_USER=postgres
SUPABASE_POSTGRES_PASSWORD=postgres
SUPABASE_POSTGRES_DB=appdb
SUPABASE_DATABASE_URL=postgres://postgres:postgres@localhost:5432/appdb

# Extra Postgres (utility)
PG_EXTRA_USER=postgres
PG_EXTRA_PASSWORD=postgres
PG_EXTRA_DB=extradb
PG_EXTRA_DATABASE_URL=postgres://postgres:postgres@localhost:5442/extradb

# Oracle XE (local)
ORACLE_PASSWORD=oracle
ORACLE_DB=XEPDB1
ORACLE_APP_USER=app
ORACLE_APP_PASSWORD=app
ORACLE_CONNECT_STRING=localhost:1521/XEPDB1

# Optional read-only DSNs for admin stats (if configured, enables health checks in /admin/db/stats)
# These should be read-only connection strings for security
# SUPABASE_DB_URL=postgres://readonly_user:password@host:port/database
# PG_EXTRA_URL=postgres://readonly_user:password@host:port/database
# ORACLE_DSN=user/password@host:port/service_name
